<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="@dimen/d_40"
              android:paddingBottom="@dimen/d_40">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_lz"/>

    <TextView
        android:id="@+id/titleMessage_tv"
        style="@style/default_medium_text_title_style"
        android:layout_marginTop="@dimen/d_20"
        android:text="申请淘宝授权"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/auth_dec_tv"
            style="@style/default_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="应淘宝要求，获得返利红包前\n请先进行淘宝官方授权"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/s_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/goto_tv"
        style="@style/default_text_title_style"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_30"
        android:background="@drawable/shape_bg_share_wv_red_button"
        android:gravity="center"
        android:textColor="@color/color_D60050"
        android:paddingLeft="@dimen/d_30"
        android:paddingRight="@dimen/d_30"
        android:text="前往淘宝授权"
        android:textSize="@dimen/s_17"/>

</LinearLayout>
