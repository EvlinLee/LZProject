<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="@dimen/d_40"
              android:paddingBottom="@dimen/d_40">

    <TextView
        android:id="@+id/titleMessage_tv"
        style="@style/default_medium_text_title_style"
        android:text="去朋友圈分享"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_30"
        android:orientation="vertical">

        <CheckBox
            style="@style/default_text_style"
            android:button="@drawable/share_wx_check_selector"
            android:checked="true"
            android:enabled="false"
            android:paddingLeft="@dimen/d_10"
            android:text="分享文案自动复制"
            android:textSize="@dimen/s_14"/>

        <CheckBox
            android:id="@+id/second_cb"
            style="@style/default_text_style"
            android:button="@drawable/share_wx_check_selector"
            android:checked="true"
            android:enabled="false"
            android:paddingLeft="@dimen/d_10"
            android:text="图片保存至手机相册"
            android:layout_marginTop="@dimen/d_14"
            android:textSize="@dimen/s_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bottomMessage_tv"
        style="@style/default_text_title_style"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_30"
        android:background="@drawable/shape_bg_share_wv_red_button"
        android:gravity="center"
        android:textColor="@color/color_D60050"
        android:paddingLeft="@dimen/d_30"
        android:paddingRight="@dimen/d_30"
        android:text="打开朋友圈"/>

</LinearLayout>
