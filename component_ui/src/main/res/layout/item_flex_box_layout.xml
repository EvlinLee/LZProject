<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="vertical">

    <TextView
        android:id="@+id/item_flex_box_tv"
        style="@style/default_text_style"
        android:background="@drawable/shape_item_flex_box_corner"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/d_15"
        android:paddingTop="@dimen/d_08"
        android:paddingRight="@dimen/d_15"
        android:paddingBottom="@dimen/d_08"
        android:singleLine="true"
        android:textColor="@color/color_555555"
        android:textSize="@dimen/s_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="标签流布局"/>

    <ImageView
        android:id="@+id/flag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hot_flex_box_pic"
        android:visibility="gone"
        app:layout_constraintCircle="@id/item_flex_box_tv"
        app:layout_constraintCircleAngle="75"
        app:layout_constraintCircleRadius="@dimen/d_52"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>