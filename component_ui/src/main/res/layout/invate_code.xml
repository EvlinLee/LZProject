<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/loadimg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="@dimen/d_105"
            android:layout_height="@dimen/d_105"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d_18"/>

        <TextView
            android:id="@+id/invate_text"
            android:layout_width="@dimen/d_120"
            android:layout_height="@dimen/d_28"
            android:layout_above="@+id/img_code"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d_10"
            android:background="@drawable/invate_code_radius20dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d_10"
            android:text="邀请ID："
            android:textColor="#ffffff"
            android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>