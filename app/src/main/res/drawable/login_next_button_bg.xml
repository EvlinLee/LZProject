<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="330dp" android:height="44dp" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffd60050"/>
            <corners android:radius="22dp"/>
            <gradient
                android:angle="0"
                android:centerColor="#9ad60050"
                android:endColor="#33d60050"
                android:startColor="#ffd60050"/>
        </shape>
    </item>

    <item android:width="330dp" android:height="44dp" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffe66696"/>
            <corners android:radius="22dp"/>
            <gradient
                android:angle="0"
                android:centerColor="#9ae66696"
                android:endColor="#33e66696"
                android:startColor="#ffe66696"/>
        </shape>
    </item>
</selector>