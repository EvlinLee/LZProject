<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/default_content_bg">

    <com.by.lizhiyoupin.app.component_banner.Banner
        android:id="@+id/product_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_375"
        android:scaleType="fitXY"
        app:indicator_height="@dimen/d_03"
        app:indicator_unselectd_width="@dimen/d_06"
        app:indicator_width="@dimen/d_10"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_detail_top_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/d_10">

        <TextView
            android:id="@+id/product_detail_top_price_tv"
            style="@style/default_text_style"
            android:textColor="@color/color_D60050"
            android:textSize="@dimen/s_17"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="￥99"/>

        <TextView
            android:id="@+id/product_detail_top_after_voucher_tv"
            style="@style/default_text_style"
            android:layout_marginLeft="@dimen/d_05"
            android:layout_marginBottom="@dimen/d_02"
            android:text="@string/product_after_coupon_text"
            android:textColor="@color/color_D60050"
            android:textSize="@dimen/s_14"
            app:layout_constraintBottom_toBottomOf="@id/product_detail_top_price_tv"
            app:layout_constraintLeft_toRightOf="@id/product_detail_top_price_tv"/>

        <TextView
            android:id="@+id/product_detail_top_monthly_sales_tv"
            style="@style/default_text_style"
            android:layout_marginLeft="@dimen/d_05"
            android:layout_marginBottom="@dimen/d_02"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/s_14"
            app:layout_constraintBottom_toBottomOf="@id/product_detail_top_price_tv"
            app:layout_constraintLeft_toRightOf="@id/product_detail_top_after_voucher_tv"
            tools:text="@string/product_monthly_sales_text"/>

        <TextView
            android:id="@+id/product_detail_top_red_packet_tv"
            style="@style/default_text_style"
            android:layout_marginLeft="@dimen/d_05"
            android:background="@drawable/shape_bg_four_corner_red"
            android:paddingLeft="@dimen/d_05"
            android:paddingTop="@dimen/d_04"
            android:paddingRight="@dimen/d_05"
            android:paddingBottom="@dimen/d_04"
            android:textColor="@color/color_D60050"
            android:textSize="@dimen/s_14"
            app:layout_constraintBaseline_toBaselineOf="@id/product_detail_top_price_tv"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@string/product_red_packet_text"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_detail_top_upgrade_tips_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_18"
            android:background="@drawable/shape_bg_detail_upgrade_four_full_yellow"
            android:paddingLeft="@dimen/d_10"
            android:paddingRight="@dimen/d_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_top_price_tv">

            <TextView
                android:id="@+id/product_detail_top_upgrade_tips_tv"
                style="@style/default_text_333_style"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1"
                android:maxHeight="@dimen/d_60"
                android:maxLines="2"
                android:paddingTop="@dimen/d_05"
                android:paddingRight="@dimen/d_01"
                android:paddingBottom="@dimen/d_05"
                android:textSize="@dimen/s_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/product_detail_top_upgrade_now_tv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="升级超级会员赚礼包奖励，最高可赚18900元"/>

            <TextView
                android:id="@+id/product_detail_top_upgrade_now_tv"
                style="@style/default_medium_text_style"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/direction_right_red"
                android:drawablePadding="@dimen/d_04"
                android:gravity="center_vertical"
                android:text="@string/product_upgrade_now_text"
                android:textColor="@color/color_C12221"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/product_detail_top_trade_name_tv"
            style="@style/default_medium_text_title_style"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d_15"
            android:ellipsize="end"
            android:enabled="true"
            android:lines="2"
            android:textColor="@color/color_333333"
            android:textColorHighlight="#CCCCCC"
            android:textSize="@dimen/s_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_top_upgrade_tips_rl"
            tools:text="商店title美式乡村梳妆台彩绘发翻盖带镜子田园小户伞盖带镜子田园小户伞"
            />

        <RelativeLayout
            android:id="@+id/product_detail_coupon_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_77"
            android:layout_marginTop="@dimen/d_12"
            android:background="@drawable/procuct_detail_top_coupon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_top_trade_name_tv">

            <TextView
                android:id="@+id/product_detail_coupon_price_tv"
                style="@style/default_text_style"
                android:layout_marginLeft="@dimen/d_32"
                android:layout_marginTop="@dimen/d_13"
                android:textColor="@color/color_C4171E"
                android:textSize="@dimen/s_26"
                android:textStyle="bold"
                tools:text="￥109"/>

            <TextView
                android:id="@+id/product_detail_coupon_tip_tv"
                style="@style/default_medium_text_style"
                android:layout_marginLeft="@dimen/d_04"
                android:layout_marginTop="@dimen/d_23"
                android:layout_toRightOf="@id/product_detail_coupon_price_tv"
                android:text="@string/product_coupon_text"
                android:textColor="@color/color_C4171E"
                android:textSize="@dimen/s_14"/>

            <TextView
                android:id="@+id/product_detail_coupon_time_limit_tv"
                style="@style/default_text_style"
                android:layout_below="@id/product_detail_coupon_price_tv"
                android:layout_marginLeft="@dimen/d_32"
                android:textColor="@color/color_555555"
                tools:text="2019.11.20-2020.11.30"/>

            <TextView
                android:id="@+id/product_detail_coupon_receive_tv"
                style="@style/default_text_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d_20"
                android:background="@drawable/shape_bg_gradient_yellow"
                android:paddingLeft="@dimen/d_10"
                android:paddingTop="@dimen/d_08"
                android:paddingRight="@dimen/d_10"
                android:paddingBottom="@dimen/d_08"
                android:text="@string/product_go_and_get_text"
                android:textColor="@color/color_C4171E"
                android:textSize="@dimen/s_14"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
