<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_262"
    android:background="@drawable/shape_bg_four_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_list_top_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/d_175"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/temp_list_detail_pic"/>

    <TextView
        android:id="@+id/label_tv"
        style="@style/default_text_style"
        android:layout_marginLeft="@dimen/d_06"
        android:layout_marginTop="@dimen/d_06"
        android:background="@drawable/shape_bg_shake_coupon_good"
        android:paddingLeft="@dimen/d_10"
        android:paddingTop="@dimen/d_02"
        android:paddingRight="@dimen/d_10"
        android:paddingBottom="@dimen/d_02"
        android:text="标签"
        android:textColor="@color/white_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/d_10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/d_10"/>

    <TextView
        android:id="@+id/item_list_title_tv"
        style="@style/default_text_style"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/d_10"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lineSpacingMultiplier="1"
        android:lines="2"
        android:textSize="@dimen/s_13"
        app:layout_constraintLeft_toLeftOf="@id/guide_line_b"
        app:layout_constraintRight_toRightOf="@+id/guide_line_e"
        app:layout_constraintTop_toBottomOf="@+id/item_list_top_iv"
        tools:text="商品title最多\n显示2行"/>

    <TextView
        android:id="@+id/want_to_buy_see_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10"
        android:drawableLeft="@drawable/eye_see"
        android:drawablePadding="@dimen/d_02"
        android:text="1234"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/s_14"
        app:layout_constraintLeft_toLeftOf="@+id/guide_line_b"
        app:layout_constraintTop_toBottomOf="@+id/item_list_title_tv"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/want_to_buy_thumbs_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10"
        android:drawableLeft="@drawable/shake_thumbs_selector"
        android:drawablePadding="@dimen/d_02"
        android:text="1234"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/s_14"
        app:layout_constraintLeft_toLeftOf="@+id/guide_line_v"
        app:layout_constraintTop_toBottomOf="@+id/item_list_title_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>