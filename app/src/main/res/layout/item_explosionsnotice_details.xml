<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF2F2F5"
    android:orientation="vertical"
    tools:context=".user.activity.WithdrawDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginTop="@dimen/d_10"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_236"
        android:background="@drawable/withdraw_item_radius_8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/explosions_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2019.12.31 12:12:12"
            android:textColor="#ff999999"
            android:textSize="@dimen/d_13"
            android:paddingTop="@dimen/d_14"
            />

        <ImageView
            android:id="@+id/explosions_img"
            android:layout_width="@dimen/d_330"
            android:layout_height="@dimen/d_136"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d_12"
            android:src="@drawable/empty_pic_list"
            />

        <com.by.lizhiyoupin.app.component_ui.weight.ExpandTextView
            android:id="@+id/explosions_content"
            android:layout_width="327dp"
            android:layout_height="42dp"
            android:text="您的粉丝【粉丝昵称】2019.12.12 12:12:12 推广成功，预计团队补贴1.11元，预计结算时间…，预计团队补贴1.11"
            android:textColor="#ff555555"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d_12"
            app:collapsedText="查看详情"
            app:collapsedLines="2"
            app:expandedText="查看详情"
            app:tipsClickable="false"
            app:tipsColor="#FFFF005E"
            />
    </LinearLayout>
        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notice_dot"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>