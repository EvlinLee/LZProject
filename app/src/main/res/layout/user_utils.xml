<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/user_withdraw"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/d_10"
              android:layout_marginTop="@dimen/d_12"
              android:layout_marginRight="@dimen/d_10"
              android:layout_marginBottom="@dimen/d_20"
              android:background="@drawable/user_savemoney"
              android:orientation="vertical"
              android:paddingBottom="@dimen/d_20">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_16"
        android:layout_marginTop="@dimen/d_20"
        android:text="必备工具"
        android:textColor="#ff2d2d2d"
        android:textSize="17sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20">
        <LinearLayout
            android:id="@+id/cash_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_cashcard"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="抵扣礼金"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cash_payable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_cashpayable"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="抵扣卡券"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/my_shopcar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_shopcar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="购物车"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_foot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_foot"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="足迹"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_16"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_setting"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="设置"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_tutorial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_new"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="新手教程"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_customer"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="客服"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/d_23"
                android:layout_height="@dimen/d_23"
                android:src="@drawable/user_about"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="关于我们"
                android:textColor="#ff2d2d2d"
                android:textSize="12sp"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
