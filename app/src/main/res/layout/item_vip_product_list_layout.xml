<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="@dimen/d_290"
                                                   android:background="@drawable/shape_bg_four_corner"
                                                   android:orientation="vertical">

    <ImageView
        android:id="@+id/item_vip_iv"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="@dimen/d_175"
        android:src="@drawable/empty_pic_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62"/>

    <TextView
        android:id="@+id/item_vip_title_tv"
        style="@style/default_medium_text_style"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/s_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        tools:text="仅限20000份，泊西呱粉太焕颜冻干粉套盒"/>

    <TextView
        android:id="@+id/item_vip_price_tv"
        style="@style/default_text_style"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginTop="@dimen/d_05"
        android:layout_marginRight="@dimen/d_10"
        android:textColor="@color/color_D60050"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_vip_title_tv"
        tools:text="￥99"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/d_27"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginBottom="@dimen/d_10"
        android:background="@drawable/shape_bg_four_corner_full_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/item_bottom_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d_05"
            android:gravity="center"
            android:src="@drawable/vip_tag"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_bottom_tv"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_bottom_tv"
            style="@style/default_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/vip_list_item_normal_text"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s_13"
            app:layout_constraintLeft_toRightOf="@+id/item_bottom_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>