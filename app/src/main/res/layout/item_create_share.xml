<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:id="@+id/item_share_cl"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_share_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/default_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_marginTop="@dimen/d_06"
        android:layout_marginRight="06dp"
        android:id="@+id/item_share_check_iv"
        app:layout_constraintRight_toRightOf="@+id/item_share_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/share_img_selector"
        android:paddingLeft="@dimen/d_10"
        android:paddingBottom="@dimen/d_10"
        android:layout_width="@dimen/d_30"
        android:layout_height="@dimen/d_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>