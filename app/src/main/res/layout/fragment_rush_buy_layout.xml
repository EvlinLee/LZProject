<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:paddingLeft="@dimen/d_10"
                                                   android:paddingRight="@dimen/d_10"
                                                   android:background="@color/default_content_gray_bg"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rush_buy_bottom_rv"
        android:paddingTop="@dimen/d_10"
        android:id="@+id/rush_buy_top_rv"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rush_buy_top_rv"
        android:id="@+id/rush_buy_bottom_rv"
        android:paddingTop="@dimen/d_01"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_135"/>

</androidx.constraintlayout.widget.ConstraintLayout>