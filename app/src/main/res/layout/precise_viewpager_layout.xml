<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rootLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@color/white_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/d_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_tv"
                style="@style/default_medium_text_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="荔枝优选"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/d_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/select_tip_tv"
                style="@style/default_medium_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_02"
                android:background="@drawable/shape_bg_ff005f_10_full_corner"
                android:ellipsize="end"
                android:includeFontPadding="true"
                android:paddingLeft="@dimen/d_06"
                android:paddingRight="@dimen/d_06"
                android:singleLine="true"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s_11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_tv"
                tools:text="猜你喜欢"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_00"
            android:layout_width="1dp"
            android:layout_height="@dimen/d_30"
            android:background="@color/color_CCCCCC"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/people_recommend_tv"
                style="@style/default_medium_text_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="达人推荐"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/d_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/tip_recommend_tv"
                style="@style/default_medium_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_02"
                android:ellipsize="end"
                android:includeFontPadding="true"
                android:paddingLeft="@dimen/d_06"
                android:paddingRight="@dimen/d_06"
                android:singleLine="true"
                android:textColor="@color/color_555555"
                android:textSize="@dimen/s_11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/people_recommend_tv"
                tools:text="好物值得买"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_01"
            android:layout_width="1dp"
            android:layout_height="@dimen/d_30"
            android:background="@color/color_CCCCCC"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shake_tv"
                style="@style/default_medium_text_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="抖券"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/d_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/tip_shake_tv"
                style="@style/default_medium_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_02"
                android:ellipsize="end"
                android:includeFontPadding="true"
                android:paddingLeft="@dimen/d_06"
                android:paddingRight="@dimen/d_06"
                android:singleLine="true"
                android:textColor="@color/color_555555"
                android:textSize="@dimen/s_11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shake_tv"
                tools:text="秒杀"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_02"
            android:layout_width="1dp"
            android:layout_height="@dimen/d_30"
            android:background="@color/color_CCCCCC"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/want_to_buy_tv"
                style="@style/default_medium_text_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="种草"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/d_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tip_want_to_buy_tv"
                style="@style/default_medium_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_02"
                android:ellipsize="end"
                android:includeFontPadding="true"
                android:paddingLeft="@dimen/d_06"
                android:paddingRight="@dimen/d_06"
                android:singleLine="true"
                android:textColor="@color/color_555555"
                android:textSize="@dimen/s_11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/want_to_buy_tv"
                tools:text="秒杀"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/d_10"
        android:paddingRight="@dimen/d_10"/>

</LinearLayout>