<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/actionbar_rl"
                app:layout_behavior="@string/header_actionBar_behavior"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44"
                android:orientation="horizontal">
    <!--用于父布局是 CoordinatorLayout-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actionbar_back_tv"
        style="@style/default_medium_text_style"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/d_15"
        android:drawableLeft="@drawable/common_back"
        android:drawablePadding="@dimen/d_05"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/s_18"
        android:text="@string/actionbar_close_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actionbar_title_tv"
        style="@style/default_medium_text_style"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/s_18"
        tools:text="title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actionbar_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="@dimen/d_10"
        android:singleLine="true"
        android:textColor="@color/color_5f5f6b"
        android:textSize="@dimen/s_14"
        tools:text="取消"/>


</RelativeLayout>