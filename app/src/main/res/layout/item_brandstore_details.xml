<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#FFF2F2F2"
              android:gravity="center_vertical"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/search_result_left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/white_shape_2"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/thumb_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_175"
            android:scaleType="fitXY"
            android:src="@drawable/test_img"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d_10"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d_10"
                android:paddingRight="@dimen/d_10"
                >

                <TextView

                    android:id="@+id/goods_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="冻扇贝柱深海美味冻扇贝柱冻，深海美味..."
                    android:textColor="#111111"
                    android:textSize="13sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d_10">


                <com.by.lizhiyoupin.app.component_ui.weight.MoneyTextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥29.9"
                    android:textColor="#ff111111"
                    android:textSize="@dimen/s_14"
                    app:type_bold="true"
                    />

                <TextView
                    android:id="@+id/search_result_yj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="劵后"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="月销1234"
                    android:textColor="#999999"
                    android:textSize="@dimen/s_12"
                    />
            </LinearLayout>


            <RelativeLayout

                android:layout_width="@dimen/d_170"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d_12"
                android:layout_marginTop="6dp"
                android:paddingLeft="@dimen/d_10">

                <LinearLayout
                    android:id="@+id/juan"
                    android:layout_width="@dimen/d_55"
                    android:layout_height="@dimen/d_18"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_list_red_bg_pic"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10元券"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/goods_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/d_15"
                    android:layout_toRightOf="@+id/juan"
                    android:background="@drawable/super_red_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="返红包 2.9元"
                    android:textColor="#D60050"
                    android:textSize="10sp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>