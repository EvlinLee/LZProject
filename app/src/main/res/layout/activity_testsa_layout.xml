<?xml version="1.0" encoding="utf-8"?>
<com.by.lizhiyoupin.app.weight.HomeHeaderLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                                                android:id="@+id/sds"
                                                android:fitsSystemWindows="false"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


        <TextView
            android:id="@+id/edv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0066cc"
            android:text="魔兽世界"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edv_header"
            android:background="#aff6c0"
            android:layout_width="match_parent"
            android:text="@string/app_name"
            android:layout_height="80dp" />


    <LinearLayout
        android:id="@+id/edv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8866cc"
            android:text="拍卖行"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" />
    </LinearLayout>

</com.by.lizhiyoupin.app.weight.HomeHeaderLayout>