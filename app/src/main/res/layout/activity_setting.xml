<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2F5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".user.activity.SettingActivity">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/user_logo"
                    android:layout_width="@dimen/d_75"
                    android:layout_height="@dimen/d_75"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d_35"
                    android:src="@drawable/default_face"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d_12"
                    android:text="点击修改头像"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/s_15"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_16"
                android:background="#FFFFFF"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/setting_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="昵称"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="#FFEEEEEE"
                    />

                <RelativeLayout
                    android:id="@+id/setting_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="性别"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"

                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="#FFEEEEEE"
                    />

                <RelativeLayout
                    android:id="@+id/setting_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="生日"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"

                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="#FFEEEEEE"
                    />

                <RelativeLayout
                    android:id="@+id/setting_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="手机号码"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"

                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:background="#FFFFFF"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/setting_wx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="微信账号"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"

                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="#FFEEEEEE"
                    />

                <RelativeLayout
                    android:id="@+id/setting_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="支付宝账号"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"

                        />
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="#FFEEEEEE"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:id="@+id/setting_bankcard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_50"
                    android:background="@drawable/withdraw_bg"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_10"
                        android:text="银行账号"
                        android:textColor="#ff111111"
                        android:textSize="@dimen/s_16"
                        />

                    <TextView
                        android:id="@+id/bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d_10"
                        android:drawablePadding="@dimen/d_10"
                        android:drawableRight="@mipmap/setting_right"
                        android:text=""
                        android:textColor="#FF999999"
                        android:textSize="@dimen/s_16"

                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/clearcache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_10"
                android:background="@drawable/withdraw_bg"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10"
                    android:text="清除缓存"
                    android:textColor="#ff111111"
                    android:textSize="@dimen/s_16"
                    />

                <TextView
                    android:id="@+id/cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d_10"
                    android:drawablePadding="@dimen/d_10"
                    android:drawableRight="@mipmap/setting_right"
                    android:text=""
                    android:textColor="#FF999999"
                    android:textSize="@dimen/s_16"

                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/exit_login"
                android:layout_width="@dimen/d_310"
                android:layout_height="@dimen/d_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_20"
                android:background="@drawable/setting_bg_loginout"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/s_17"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>