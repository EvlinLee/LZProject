<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/color_F2F2F5"
              android:orientation="vertical">

    <include layout="@layout/actionbar_layout"/>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magicIndicator"
        android:layout_marginTop="@dimen/d_12"
        android:background="@drawable/shape_bg_tab_income_data_record_corner"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/d_288"
        android:layout_height="@dimen/d_35"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_marginTop="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>