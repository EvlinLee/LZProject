<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF2F2F5"
    tools:context=".user.activity.WithdrawDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_80"
        android:background="@drawable/withdraw_item_radius_8dp"
        android:layout_marginTop="8dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_20"
            >
            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现审核中"
                android:textColor="#ff333333"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.01.01 12:11:11"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                />
            
        </LinearLayout>

        <com.by.lizhiyoupin.app.component_ui.weight.MoneyTextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 123.00"
            android:textColor="#FF333333"
            android:textSize="@dimen/s_15"
            app:type_bold="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/d_20"
            />

    </LinearLayout>


</LinearLayout>