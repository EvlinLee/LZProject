<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/stick_normal_ll"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_normal_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="荔枝优选"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d_16"/>

        <TextView
            android:id="@+id/select_tip_normal_tv"
            style="@style/default_medium_text_style"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_ff005f_10_full_corner"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingLeft="@dimen/d_06"
            android:paddingRight="@dimen/d_06"
            android:singleLine="true"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s_11"
            tools:text="猜你喜欢"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/d_30"
        android:background="@color/color_CCCCCC"/>
</LinearLayout>