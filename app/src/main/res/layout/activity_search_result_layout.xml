<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_content_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginRight="@dimen/d_16"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d_10"
        android:paddingRight="@dimen/d_10">

        <ImageView
            android:id="@+id/actionbar_search_back_iv"
            android:layout_width="@dimen/d_44"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/d_12"
            android:paddingRight="@dimen/d_10"
            android:paddingBottom="@dimen/d_12"
            android:src="@drawable/common_back"/>

        <EditText
            android:id="@+id/actionbar_search_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_34"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edit_bussiness_search_corners_four_shape"
            android:drawableLeft="@drawable/actionbar_search_iv"
            android:drawablePadding="@dimen/d_06"
            android:hint="@string/home_search_top_hint_text"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/d_12"
            android:singleLine="true"
            android:textColorHint="@color/color_CCCCCC"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            android:textSize="@dimen/s_14"/>


    </LinearLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magicIndicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_44"
        android:layout_marginLeft="@dimen/d_48"/>

    <View
        style="@style/list_line_style"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/search_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>