<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2F2F5"
    android:fitsSystemWindows="true"
    tools:context=".user.activity.Operator_withdrawActivity"
    >
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:background="@drawable/withdraw_bg"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_10"
                android:text="支付宝号"
                android:textColor="#ff333333"
                android:textSize="@dimen/s_16"
                />

            <EditText
                android:id="@+id/alipay_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="@dimen/d_10"
                android:background="@drawable/withdraw_bg"
                android:hint="请输入邮箱、手机号格式账号"
                android:textSize="@dimen/s_15"
                android:textCursorDrawable="@drawable/cursor_bg_size"
                >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:layout_marginTop="8dp"
            android:background="@drawable/withdraw_bg"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_10"
                android:text="真实姓名"
                android:textColor="#ff333333"
                android:textSize="@dimen/s_16"
                />

            <EditText
                android:id="@+id/alipay_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="@dimen/d_10"
                android:background="@drawable/withdraw_bg"
                android:hint="请输入简体汉字"
                android:textSize="@dimen/s_15"
                android:textCursorDrawable="@drawable/cursor_bg_size"
                >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_160"
            android:layout_marginTop="8dp"
            android:background="@drawable/withdraw_bg"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_10"
                android:layout_marginTop="@dimen/d_18"
                android:text="提现金额"
                android:textColor="#333333"
                android:textSize="@dimen/s_16"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_60">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#ff333333"
                    android:textSize="30sp"
                    android:layout_marginTop="@dimen/d_24"
                    android:layout_marginLeft="@dimen/d_10"
                    />

                <EditText
                    android:id="@+id/edit_money"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editext_bg"
                    android:textColor="#ffef1818"
                    android:textSize="@dimen/s_30"
                    android:layout_marginTop="@dimen/d_26"
                    android:layout_marginLeft="@dimen/d_16"
                    android:textCursorDrawable="@drawable/cursor_bg_size"
                    android:inputType="numberDecimal"
                    />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/withdraw_bg"
                    android:hint="10元起提（当月可提现金额剩余元）"
                    android:textSize="@dimen/s_14"
                    android:layout_marginTop="@dimen/d_38"
                    android:layout_marginLeft="@dimen/d_16"
                    />

            </RelativeLayout>
            <View
                android:layout_marginRight="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="@dimen/d_18"
                android:layout_marginLeft="@dimen/d_10"
                android:layout_marginBottom="@dimen/d_13"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10"
                    android:text="提现手续费"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/s_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_16"
                    android:text="(活动期免手续费)"
                    android:textColor="#EF1818"
                    android:textSize="@dimen/s_16"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:layout_marginTop="8dp"
            android:background="@drawable/withdraw_bg"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_10"
                android:text="手机号"
                android:textColor="#ff333333"
                android:textSize="@dimen/s_16"
                />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="@dimen/d_10"
                android:background="@drawable/withdraw_bg"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:layout_marginTop="8dp"
            android:background="@drawable/withdraw_bg"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_10"
                android:text="验证码"
                android:textColor="#ff333333"
                android:textSize="@dimen/s_16"
                />

            <EditText
                android:id="@+id/withdraw_sms"
                android:layout_width="0dp"
                android:layout_weight="1    "
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="@dimen/d_10"
                android:background="@drawable/withdraw_bg"
                android:hint="请输入您的验证码"
                android:textSize="@dimen/s_15"
                android:textCursorDrawable="@drawable/cursor_bg_size"
                android:maxLength="6"
                android:inputType="number"
                >
            </EditText>

            <TextView
                android:id="@+id/getsms"
                android:layout_width="@dimen/d_90"
                android:layout_height="@dimen/d_26"
                android:text="获取验证码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/s_15"
                android:gravity="center"
                android:background="@drawable/user_withdraw_sms_bg"
                android:layout_marginRight="@dimen/d_10"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/user_submit"
            android:layout_width="@dimen/d_265"
            android:layout_height="@dimen/d_40"
            android:text="提交申请"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/user_withdraw_apply_bg"
            android:layout_marginTop="@dimen/d_30"
            />

    </LinearLayout>

</LinearLayout>