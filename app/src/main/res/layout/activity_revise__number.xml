<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2F5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".user.activity.Revise_NumberActivity">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/d_10"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/d_12"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示："
        android:textColor="#ffef1818"
        android:textSize="@dimen/s_14"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换手机号后，下次登录可使用新手机号登录哦～"
        android:textColor="#ff999999"
        android:textSize="@dimen/s_14"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/current_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff999999"
        android:textSize="@dimen/s_14"
        android:layout_marginTop="4dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_20"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="新手机号："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <EditText
            android:id="@+id/number_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:hint="请输入新手机号"
            android:textSize="@dimen/s_15"
            android:inputType="phone"
            android:maxLength="11"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="验证码："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <EditText
            android:id="@+id/number_getsms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:hint="请输入验证码"
            android:textSize="@dimen/s_15"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            android:maxLength="6"
            android:inputType="number"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/d_30"
            android:background="#D8D8D8"
            android:layout_marginRight="@dimen/d_20"
            />
        <TextView
            android:id="@+id/getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="@dimen/s_12"
            android:textColor="#FFC8A859"
            android:layout_marginRight="@dimen/d_20"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/number_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@drawable/nickname_bg_button"
        android:layout_marginTop="@dimen/d_35"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginLeft="@dimen/d_10"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="@dimen/s_17"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_submit"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@drawable/nickname_bg_button_red"
        android:layout_marginTop="@dimen/d_25"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginLeft="@dimen/d_10"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />
    </LinearLayout>
</LinearLayout>