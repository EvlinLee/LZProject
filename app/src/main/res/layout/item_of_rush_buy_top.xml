<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_135"
    android:paddingLeft="@dimen/d_10"
    android:background="@color/white_100"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rush_bug_top_tv"
        style="@style/default_medium_text_style"
        android:layout_marginTop="@dimen/d_10"
        android:drawableLeft="@drawable/temp_round_pic"
        android:drawablePadding="@dimen/d_06"
        android:singleLine="true"
        android:textSize="@dimen/s_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="限时抢购"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/rush_bug_tip_left_tv"
        style="@style/default_text_style"
        android:layout_marginTop="@dimen/d_10"
        android:singleLine="true"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/s_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rush_bug_top_tv"
        tools:text="10点场嗨翻荔枝城"/>

    <TextView
        android:id="@+id/rush_bug_tip_right_tv"
        style="@style/default_text_style"
        android:layout_marginTop="@dimen/d_10"
        android:singleLine="true"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/s_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/rush_bug_tip_left_tv"
        app:layout_constraintLeft_toLeftOf="@+id/guide_line"
        tools:text="10点场嗨翻荔枝城"/>

    <ImageView
        android:id="@+id/rush_bug_bottom_left_iv"
        android:layout_width="@dimen/d_64"
        android:layout_height="@dimen/d_64"
        android:layout_marginTop="@dimen/d_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guide_line"
        app:layout_constraintTop_toBottomOf="@+id/rush_bug_tip_left_tv"
        tools:src="@drawable/default_face"/>

    <ImageView
        android:id="@+id/rush_bug_bottom_right_iv"
        android:layout_width="@dimen/d_64"
        android:layout_height="@dimen/d_64"
        android:layout_marginTop="@dimen/d_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guide_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rush_bug_tip_left_tv"
        tools:src="@drawable/default_face"/>

</androidx.constraintlayout.widget.ConstraintLayout>