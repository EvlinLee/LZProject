<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2F5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".user.activity.BankcardBindingActivity">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="账户户名："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <EditText
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:hint="请输入户名"
            android:textSize="@dimen/s_15"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="开户行："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <EditText
            android:id="@+id/bank_accountname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:hint="请输入开户行"
            android:textSize="@dimen/s_15"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="账户："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <EditText
            android:id="@+id/bank_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:hint="请输入账户"
            android:textSize="@dimen/s_15"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="手机号码："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <TextView
            android:id="@+id/bank_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:textSize="@dimen/s_15"
            android:gravity="center_vertical"
            android:textColor="#ff111111"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/withdraw_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_marginRight="@dimen/d_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="验证码："
            android:textColor="#ff111111"
            android:textSize="@dimen/s_16"
            />

        <EditText
            android:id="@+id/bank_sms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/withdraw_bg"
            android:hint="请输入验证码"
            android:textSize="@dimen/s_15"
            android:textCursorDrawable="@drawable/cursor_bg_size"
            android:maxLength="6"
            android:inputType="number"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/d_30"
            android:background="#D8D8D8"
            android:layout_marginRight="@dimen/d_20"
            />
        <TextView
            android:id="@+id/getsms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="@dimen/s_12"
            android:textColor="#FFC8A859"
            android:layout_marginRight="@dimen/d_20"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_12"
            android:layout_marginLeft="@dimen/d_10"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/alipay_check_xy"
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_15"
                android:background="@drawable/checkbox_style_1"
                android:button="@null"
                android:layout_centerVertical="true"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我同意"
                android:textColor="#ff999999"
                android:textSize="@dimen/s_15"
                android:layout_marginLeft="@dimen/d_08"
                />
            <TextView
                android:id="@+id/freelance_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【自由职业者服务协议】"
                android:textColor="#FF5491EF"
                android:textSize="@dimen/s_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="并签约"
                android:textColor="#ff999999"
                android:textSize="@dimen/s_15"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/bank_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@drawable/nickname_bg_button"
        android:layout_marginTop="@dimen/d_20"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginLeft="@dimen/d_10"
        android:gravity="center"
        android:layout_marginBottom="@dimen/d_10"
        >
        <TextView
            android:id="@+id/bind1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即绑定"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bank_bind"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@drawable/nickname_bg_button_red"
        android:layout_marginTop="@dimen/d_20"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginLeft="@dimen/d_10"
        android:gravity="center"
        android:layout_marginBottom="@dimen/d_10"
        >
        <TextView
            android:id="@+id/bind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即绑定"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>