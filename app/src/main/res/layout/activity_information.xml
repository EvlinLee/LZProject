<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2F5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".main.activity.InformationActivity">


    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/d_10"
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingTop="@dimen/d_14"
        android:paddingLeft="@dimen/d_14"
        android:background="#FFFFFFFF"
        android:paddingBottom="@dimen/d_15"
        >
        <RelativeLayout
            android:id="@+id/notice_imcon"
            android:layout_width="@dimen/d_42"
            android:layout_height="@dimen/d_42"
            >

            <ImageView
                android:layout_width="@dimen/d_40"
                android:layout_height="@dimen/d_40"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="@dimen/d_02"
                android:background="@drawable/notice_commission"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notice_dot"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/notice_title"
            android:layout_toRightOf="@+id/notice_imcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_02"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="佣金通知"
                android:textColor="#ff111111"
                android:textSize="@dimen/s_15"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10/28 16:00"
                android:textColor="#ff999999"
                android:textSize="@dimen/s_11"
                android:layout_marginRight="@dimen/d_10"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/notice_message"
            android:layout_below="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="您在2019.12.14 12:12:12 推广"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/notice_imcon"
            android:layout_marginTop="@dimen/d_02"

            />
    </RelativeLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#FFF8F8F8"
    />
    <RelativeLayout
        android:id="@+id/system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d_14"
        android:paddingLeft="@dimen/d_14"
        android:background="#FFFFFFFF"
        android:paddingBottom="@dimen/d_15"
        >
        <RelativeLayout
            android:id="@+id/system_imcon"
            android:layout_width="@dimen/d_42"
            android:layout_height="@dimen/d_42"
            >
            <ImageView
                android:layout_marginTop="@dimen/d_02"
                android:layout_width="@dimen/d_40"
                android:layout_height="@dimen/d_40"
                android:background="@drawable/system_icon"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notice_dot"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/system_title"
            android:layout_toRightOf="@+id/system_imcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_02"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="系统通知"
                android:textColor="#ff111111"
                android:textSize="@dimen/s_15"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10/28 16:00"
                android:textColor="#ff999999"
                android:textSize="@dimen/s_11"
                android:layout_marginRight="@dimen/d_10"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/system_message"
            android:layout_below="@+id/system_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="您在2019.12.14 12:12:12 推广"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/system_imcon"
            android:layout_marginTop="@dimen/d_02"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF8F8F8"
        />
    <RelativeLayout
        android:id="@+id/explosions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d_14"
        android:paddingLeft="@dimen/d_14"
        android:background="#FFFFFFFF"
        android:paddingBottom="@dimen/d_15"
        >
        <RelativeLayout
            android:id="@+id/explosions_imcon"
            android:layout_width="@dimen/d_42"
            android:layout_height="@dimen/d_42"
            >
            <ImageView
                android:layout_marginTop="@dimen/d_02"
                android:layout_width="@dimen/d_40"
                android:layout_height="@dimen/d_40"
                android:background="@drawable/explosions_icon"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/explosions_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notice_dot"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/explosions_title"
            android:layout_toRightOf="@+id/explosions_imcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_02"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="每日爆款"
                android:textColor="#ff111111"
                android:textSize="@dimen/s_15"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/explosions_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10/28 16:00"
                android:textColor="#ff999999"
                android:textSize="@dimen/s_11"
                android:layout_marginRight="@dimen/d_10"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/explosions_message"
            android:layout_below="@+id/explosions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="您在2019.12.14 12:12:12 推广"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/explosions_imcon"
            android:layout_marginTop="@dimen/d_02"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF8F8F8"
        />
    <RelativeLayout
        android:id="@+id/interactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d_14"
        android:paddingLeft="@dimen/d_14"
        android:background="#FFFFFFFF"
        android:paddingBottom="@dimen/d_15"
        >
        <RelativeLayout
            android:id="@+id/interactive_imcon"
            android:layout_width="@dimen/d_42"
            android:layout_height="@dimen/d_42"
            >
            <ImageView
                android:layout_marginTop="@dimen/d_02"
                android:layout_width="@dimen/d_40"
                android:layout_height="@dimen/d_40"
                android:background="@drawable/interactive_icon"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/interactive_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notice_dot"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/interactive_title"
            android:layout_toRightOf="@+id/interactive_imcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_02"
            >
            <TextView
                android:id="@+id/interactive_title1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="互动消息"
                android:textColor="#ff111111"
                android:textSize="@dimen/s_15"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/interactive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10/28 16:00"
                android:textColor="#ff999999"
                android:textSize="@dimen/s_11"
                android:layout_marginRight="@dimen/d_10"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/interactive_message"
            android:layout_below="@+id/interactive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="限时八折中 立即购买"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/interactive_imcon"
            android:layout_marginTop="@dimen/d_02"
            />
    </RelativeLayout>
</LinearLayout>