<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/rootLL"
              android:layout_width="match_parent"
              android:layout_height="@dimen/d_45"
              android:paddingTop="05dp"
              android:background="@color/color_F2F2F5"
              android:gravity="center_vertical"
              android:orientation="horizontal">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_00"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="荔枝优选"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d_16"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/select_indicator"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_02"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_08"
            android:background="@color/color_D60050"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_tv"/>

        <TextView
            android:id="@+id/select_tip_tv"
            style="@style/default_medium_text_style"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_ff005f_10_full_corner"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingLeft="@dimen/d_06"
            android:paddingRight="@dimen/d_06"
            android:singleLine="true"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s_11"
            app:layout_constraintTop_toBottomOf="@+id/select_tv"
            android:layout_marginTop="@dimen/d_02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="猜你喜欢"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_00"
        android:layout_width="1dp"
        android:layout_height="@dimen/d_30"
        android:background="@color/color_CCCCCC"/>

    <View
        android:id="@+id/line_top_00"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:background="@color/color_CCCCCC"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_01"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/people_recommend_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="达人推荐"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/recommend_indicator"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_02"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_08"
            android:background="@color/color_D60050"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/people_recommend_tv"/>

        <TextView
            android:id="@+id/tip_recommend_tv"
            style="@style/default_medium_text_style"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingLeft="@dimen/d_06"
            android:paddingRight="@dimen/d_06"
            android:singleLine="true"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/s_11"
            android:layout_marginTop="@dimen/d_02"
            app:layout_constraintTop_toBottomOf="@+id/people_recommend_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="好物值得买"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_01"
        android:layout_width="1dp"
        android:layout_height="@dimen/d_30"
        android:background="@color/color_CCCCCC"/>

    <View
        android:id="@+id/line_top_01"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:background="@color/color_CCCCCC"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_02"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shake_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="抖券"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <View
            android:id="@+id/shake_indicator"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_02"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_08"
            android:background="@color/color_D60050"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shake_tv"/>


        <TextView
            android:id="@+id/tip_shake_tv"
            style="@style/default_medium_text_style"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingLeft="@dimen/d_06"
            android:paddingRight="@dimen/d_06"
            android:singleLine="true"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/s_11"
            android:layout_marginTop="@dimen/d_02"
            app:layout_constraintTop_toBottomOf="@+id/shake_tv"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="秒杀"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_02"
        android:layout_width="1dp"
        android:layout_height="@dimen/d_30"
        android:background="@color/color_CCCCCC"/>

    <View
        android:id="@+id/line_top_02"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:background="@color/color_CCCCCC"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_03"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView

            android:id="@+id/want_to_buy_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="种草"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/want_to_buy_indicator"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_02"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_08"
            android:background="@color/color_D60050"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/want_to_buy_tv"/>

        <TextView
            android:id="@+id/tip_want_to_buy_tv"
            style="@style/default_medium_text_style"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingLeft="@dimen/d_06"
            android:paddingRight="@dimen/d_06"
            android:singleLine="true"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/s_11"
            android:layout_marginTop="@dimen/d_02"
            app:layout_constraintTop_toBottomOf="@+id/want_to_buy_tv"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="秒杀"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>