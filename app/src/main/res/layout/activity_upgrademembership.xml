<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/actionbar"
            layout="@layout/actionbar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_44"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0E0E0E"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF0E0E0E"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:id="@+id/invate_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_150"
                    android:background="@drawable/pu_invate"
                    android:orientation="vertical"
                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="邀请30个已经下单的专属粉丝"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_20"
                        android:text="任务达成后可获得一年的超级会员的权益"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="2个月内邀请30个专属超级会员"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="升级下月确认收货时间延后7天订单金额大于等于300元"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="下下月仍然保持PLUS超级会员"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="任务达成后可获得一年的PLUS超级会员的权益"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_operator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="在3个月内，邀请3个运营商和30个专属超级会员"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_20"
                        android:text="任务达成后可获得一年的PLUS运营商的权益"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_operator1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="在3个月内，邀请3个运营商和30个专属超级会员"
                        android:textColor="#ffffe4bf"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/progress_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_40"
                    android:background="@drawable/invate_bg_progress"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_27"
                            android:src="@drawable/invate_rule_left"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_16"
                            android:layout_marginTop="@dimen/d_20"
                            android:text="邀请进度"
                            android:textColor="#ff111111"
                            android:textSize="@dimen/s_18"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_16"
                            android:layout_marginTop="@dimen/d_27"
                            android:src="@drawable/invate_rule_right"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_progress1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_37"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/progress1_title1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_42"
                                android:layout_weight="1"
                                android:text="专属粉丝"
                                android:textColor="#ff0e0e0e"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/progress_num1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff0e0e0e"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/d_42"
                                android:text="人/目标3人"
                                android:textColor="#ff0e0e0e"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/d_315"
                            android:layout_height="@dimen/d_14"
                            android:layout_marginTop="@dimen/d_10"
                            android:background="@drawable/progress_color_radius7dp"
                            android:max="3"
                            android:progress="0"
                            android:progressDrawable="@drawable/prograss_bg"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_progress2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_37"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/progress1_title2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_42"
                                android:layout_weight="1"
                                android:text="专属超级会员"
                                android:textColor="#ff0e0e0e"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/progress_num2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff0e0e0e"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/d_42"
                                android:text="人/目标30人"
                                android:textColor="#ff0e0e0e"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/d_315"
                            android:layout_height="@dimen/d_14"
                            android:layout_marginTop="@dimen/d_10"
                            android:background="@drawable/progress_color_radius7dp"
                            android:max="30"
                            android:progress="0"
                            android:progressDrawable="@drawable/prograss_bg"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_40"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/progress_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="当前任务周期 2019.09.09 12:11:11 -2019.11.09 12:11:11"
                            android:textColor="#555555"
                            android:textSize="@dimen/s_11"
                            />

                        <TextView
                            android:id="@+id/must_invate"
                            android:layout_width="@dimen/d_315"
                            android:layout_height="@dimen/d_44"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/d_30"
                            android:layout_marginTop="@dimen/d_06"
                            android:background="@drawable/invate_color_radius22dp"
                            android:gravity="center"
                            android:text="立即邀请好友"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/s_17"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/must_join"
                    android:layout_width="@dimen/d_315"
                    android:layout_height="@dimen/d_44"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d_40"
                    android:background="@drawable/invate_bg_next"
                    android:gravity="center"
                    android:text="立即参加活动"
                    android:textColor="#ff323232"
                    android:textSize="17sp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/rlue_pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d_40"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_40"
                    android:background="@drawable/invate_rule_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d_16"
                    android:paddingRight="@dimen/d_16"
                    android:visibility="gone"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_30"
                        android:text="活动规则介绍"
                        android:textColor="#ffa4957c"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="1、点击立即参加活动按钮，开始活动任务，普通会员任务周期时间不限制"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_06"
                        android:text="2、参与活动的普通用户，邀请完成30个有效专属粉丝（下单用户），即可享受超级会员权益"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d_30"
                        android:layout_marginTop="@dimen/d_06"
                        android:text="3、超级会员的有效期为1年，满足条件后默认自动升级"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlue_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d_40"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_40"
                    android:background="@drawable/invate_rule_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d_16"
                    android:paddingRight="@dimen/d_16"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_30"
                        android:text="活动规则介绍"
                        android:textColor="#ffa4957c"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="1、点击立即参加活动按钮，开始活动任务，任务周期：两个自然月"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_06"
                        android:text="2、参与活动的超级会员用户，邀请完成30个专属超级会员粉丝，即可享受PLUS超级会员权益"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d_30"
                        android:layout_marginTop="@dimen/d_06"
                        android:text="3、PLUS超级会员的有效期为升级当月与下月，下月自购确认收货时间延后7天的订单金额大于等于300元后，下下月仍然保持PLUS超级会员权益"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlue_operator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d_40"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_40"
                    android:background="@drawable/invate_rule_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d_16"
                    android:paddingRight="@dimen/d_16"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_30"
                        android:text="活动规则介绍"
                        android:textColor="#ffa4957c"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_14"
                        android:text="1、点击立即参加活动按钮，开始活动任务，任务周期：三个自然月"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d_30"
                        android:layout_marginTop="@dimen/d_06"
                        android:text="2、参与活动的PLUS运营商用户，邀请完成30个专属超级会员粉丝且3个运营商，即可保持PLUS运营商权益"
                        android:textColor="#ffa4957c"
                        android:textSize="14sp"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

