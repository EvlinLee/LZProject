<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2F5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".user.activity.CashSuccessActivity">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d_35"
        android:layout_marginRight="@dimen/d_20"
        android:layout_marginLeft="@dimen/d_20"
        android:layout_marginBottom="@dimen/d_35"
        android:background="@drawable/user_savemoney"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="@dimen/d_95"
        android:layout_height="@dimen/d_95"
        android:src="@drawable/submit_success"
        android:layout_marginTop="@dimen/d_90"
        />
        <TextView
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="提交成功，请耐心等待工作人员审核
您的申请预计在3个工作日完成"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_16"
            android:layout_marginTop="@dimen/d_40"
            />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="快去发展你的粉丝吧"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_15"
            android:layout_marginTop="@dimen/d_16"
            />
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="赚取更多的佣金"
            android:textColor="#ff999999"
            android:textSize="@dimen/s_15"
            />
        
        <TextView
            android:id="@+id/share"
            android:layout_width="@dimen/d_120"
            android:layout_height="@dimen/d_30"
            android:layout_marginTop="@dimen/d_35"
            android:text="马上分享"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/user_submit_bg_radius8dp"
            android:textSize="@dimen/s_16"
            />

    </LinearLayout>
</LinearLayout>